{% extends 'base.html.twig' %}

{% block title %}Organisme Formation{% endblock %}

{% block body %}
{% set tasks_count = organisme_formations|length %}

    <h1>Liste Organisme Formation {{tasks_count}} </h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Nom</th>
                <th>Adresse</th>
                <th>Num_tel</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organisme_formation in organisme_formations %}
            <tr>
               
                <td>{{ organisme_formation.nom }}</td>
                <td>{{ organisme_formation.adresse }}</td>
                <td>{{ organisme_formation.numTel }}</td>
                <td>{{ organisme_formation.email }}</td>
                <td>
                    <a href="{{ path('app_organisme_formation_show', {'id': organisme_formation.id}) }}">Voir</a>
                    <a href="{{ path('app_organisme_formation_edit', {'id': organisme_formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">0 enregistrement en bdd</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_organisme_formation_new') }}">Creer</a>
{% endblock %}
